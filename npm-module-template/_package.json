{
  "name": "<%= packageName %>",
  "version": "0.0.1",
  "description": "<%= packageDescription %>",
  "main": "dist/esm.js",
  "scripts": {
    "lint": "./node_modules/.bin/eslint src --ext .js",
    "build": "./node_modules/.bin/rollup -c",
    "dev": "./node_modules/.bin/rollup -c -w",
    "test": "./node_modules/.bin/jest src",
    "test:watch": "./node_modules/.bin/jest --watchAll --notify",
    "coverage": "./node_modules/.bin/jest src --coverage",
    "pretty": "./node_modules/.bin/prettier --write \"**/*.js\"",
    "clean": "rm -rf dist/*"
  },
  "lint-staged": {
    "src/**/*.{js,json}": [
      "npm run pretty",
      "npm run lint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test"
    }
  },
  "author": "<%= authorName %>",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/plugin-transform-runtime": "^7.12.10",
    "@babel/preset-env": "^7.12.10",
    "@babel/runtime": "^7.12.5",
    "@rollup/plugin-babel": "^5.2.2",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.1",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.5.0",
    "core-js": "^3.8.1",
    "eslint": "^5.15.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "husky": "^2.2.0",
    "jest": "^24.3.1",
    "lint-staged": "^8.1.6",
    "prettier": "^1.17.0",
    "prop-types": "^15.7.2",
    "rollup": "^2.35.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-visualizer": "^3.3.1"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ]
}
